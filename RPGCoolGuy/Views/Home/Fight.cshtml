@model Fight
@{
    ViewData["Title"] = "Fight";
}

<form asp-action="Fight" method="post" class="form-horizontal">
    <div class="row">
        <label asp-for="Character1" class="form-label col-sm-3">
            Fighter 1
        </label>
        <select asp-for="Character1" class="form-select col">
            @foreach (Character c in ViewBag.Characters)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>
    <div class="row mt-3">
        <label asp-for="Character2" class="form-label col-sm-3">
            Fighter 2
        </label>
        <select asp-for="Character2" class="form-select col">
            @foreach (Character c in ViewBag.Characters)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>
    <div class="mt-5">
        <button type="submit" class="btn btn-danger">
            FIGHT!!!
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>
