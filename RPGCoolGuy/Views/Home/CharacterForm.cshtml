@model Character;

<form asp-action="Edit" method="post" class="form-horizontal">
    <div class="row">
        <label asp-for="Name" class="form-label col-sm-3">
            Name
        </label>
        <input type="text" asp-for="Name" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="Attack" class="form-label col-sm-3">
            Attack
        </label>
        <input type="number" asp-for="Attack" class="form-control col" />
    </div>
    <div class="row mt-3">
        <label asp-for="Defense" class="form-label col-sm-3">
            Defense
        </label>
        <input type="number" asp-for="Defense" class="form-control col"/>
    </div>
    <div class="row mt-3">
        <label asp-for="HP" class="form-label col-sm-3">
            HP
        </label>
        <input type="number" asp-for="HP" class="form-control col" />
    </div>
    <div class="mt-5">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
